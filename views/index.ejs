<!DOCTYPE html>
<html>

<head>
  <% include ./partials/header %>
</head>

<body
  class="home page-template-default page page-id-42 sticky-header rocket_layout_fullwidth wpb-js-composer js-comp-ver-6.1 vc_responsive">
  <div class="page-loader">
    <div class="loader-inner">
      <div class="dot1"></div>
      <div class="dot2"></div>
    </div>
  </div>
  <div class="page-wrapper">
    <% include ./partials/header-wrapper %>
    <header id="pmine-exchange"
      class="page-title section-title-wrapper section-title-wrapper__no-bottom-margin page-title-layout__both-centered page_title_preset_1 page-title_overflow">
      <div class="section-title-inner">
        <div class="container">
          <div class="section-title-decoration">
            <div class="row">
              <div class="col-md-12">
                <h1 class="section-title section-title__lg">PMINE EXCHANGE</h1>
              </div>
              <div class="col-md-12 breadcrumbs-default">
                <ol class="breadcrumb" itemscope itemtype="http://schema.org/BreadcrumbList">
                  <li><a href="/">Home</a></li>
                </ol>
              </div>
            </div>
            <span class="section-title-dots">
              <span class="dot1"></span>
              <span class="dot2"></span>
              <span class="dot3"></span>
            </span>
          </div>
        </div>
        <div class="section-title-overlay"></div>
      </div>
      <div class="exchange">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="exchange-main box-shadow">
                <form>
                  <div class="row">
                    <div class="col-md-12">
                      <p><i class="fa fa-check"></i> 1 Pmine = <span id="pminePrice"></span> IOST</p>
                    </div>
                  </div>
                  <h2>Buy Pmine</h2>
                  <div class="row text-center" id="statusBuyMsg">
                  </div>
                  <div class="row">
                    <div class="col-md-5">
                      <div class="exchange-item box-shadow wow fadeIn" data-wow-delay=".2s">
                        <input type="number" placeholder="1" id="pmineAmtBuy">
                        <div class="dropdown">
                          <a class="dropdown-toggle" href="javascript:void;">
                            <span class="selected-coin2">Pmine</span>
                          </a>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-5">
                      <div class="exchange-item box-shadow wow fadeIn" data-wow-delay=".3s">
                        <input type="number" placeholder="10" id="iostAmtBuy">
                        <div class="dropdown">
                          <a class="dropdown-toggle" href="javascript:void;">
                            <span class="selected-coin3">IOST</span>
                          </a>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-2">
                      <div class="exchange-button wow fadeIn" data-wow-delay=".4s"
                        style="visibility: visible; animation-delay: 0.4s; animation-name: fadeIn;">
                        <a href="javascript:void(0)"
                          class="vc_general vc_btn3 btn btn-md vc_btn3-shape-rounded vc_btn3-style-default btn-primary" id="buyBtn">Buy!</a>
                      </div>
                    </div>
                  </div>
                  <hr>
                  <h2>Sell Pmine</h2>
                  <div class="row text-center" id="statusSellMsg">
                  </div>
                  <div class="row">
                    <div class="col-md-5">
                      <div class="exchange-item box-shadow wow fadeIn" data-wow-delay=".2s">
                        <input type="number" placeholder="1" id="pmineAmtSell">
                        <div class="dropdown">
                          <a class="dropdown-toggle" href="javascript:void;">
                            <span class="selected-coin2">Pmine</span>
                          </a>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-5">
                      <div class="exchange-item box-shadow wow fadeIn" data-wow-delay=".3s">
                        <input type="number" placeholder="10" id="iostAmtSell">
                        <div class="dropdown">
                          <a class="dropdown-toggle" href="javascript:void;">
                            <span class="selected-coin3">IOST</span>
                          </a>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-2">
                      <div class="exchange-button wow fadeIn" data-wow-delay=".4s"
                           style="visibility: visible; animation-delay: 0.4s; animation-name: fadeIn;">
                        <a href="javascript:void(0)"
                           class="vc_general vc_btn3 btn btn-md vc_btn3-shape-rounded vc_btn3-style-default btn-primary" id="sellBtn">Sell!</a>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <p>Buyback price is 60% of the current exchange rate.</p>
                    </div>
                  </div>
                </form>
                <div class="row">
                  <div class="col-md-12">
                    <div class="exchange-protect">
                      <!-- <img src="/images/protect.png" alt="..."> -->
                      <p id="token-msg"></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>
    <div class="page-section">
      <div class="container">
        <div class="row">
          <% include ./partials/index %>
        </div>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Buy/Sell Pmine</h4>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col-sm-12">
                <div class="form-group">
                  <label for="buyOrSellAmt">Pmine Amount</label>
                  <input type="number" class="form-control" id="buyOrSellAmt" placeholder="0.00000000">
                </div>
              </div>
              <div class="col-sm-12">
                <div class="row text-center" id="statusMsg">
                </div>
                <div class="row text-center">
                  <div class="col-sm-6">
                    <button type="button" class="btn btn-sm btn-warning" id="buyBtn">Buy</button>
                  </div>
                  <div class="col-sm-6">
                    <button type="button" class="btn btn-sm btn-danger" id="sellBtn">Sell</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% include ./partials/footer %>
</body>

</html>